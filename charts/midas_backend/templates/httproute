{{- if .Values.httproute.enabled -}}
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: {{ include "midasbackend.fullname" . }}
  {{- with .Values.httproute.annotations }}
  annotations:
    {{- toYaml . | nindent 4 }}
  {{- end }}
spec:
  parentRefs:
  - name: {{ .Values.httproute.spec.parentRefs }}
  hostnames:
  - '{{ .Values.httproute.host }}'
  rules:
  - matches:
    - path:
        type: PathPrefix
        value: /api/admin
    backendRefs:
    - name: {{ include "midasbackend.fullname" . }}-api
      kind: Service
      port: {{ .Values.services.api.port }}
  - matches:
    - path:
        type: PathPrefix
        value: /location
    - path:
        type: PathPrefix
        value: /users
    - path:
        type: PathPrefix
        value: /categories
    backendRefs:
    - name: {{ include "midasbackend.fullname" . }}-db
      kind: Service
      port: {{ .Values.services.db.port }}
{{- end }}
